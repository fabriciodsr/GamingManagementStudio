@model IEnumerable<GMS.Domain.Entities.Loan>

@{
    ViewBag.Title = "Lista de Empréstimos";
}

<section class="content-header">
    <h1>
        &nbsp;
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-th"></i> Dashboard</a></li>
        <li><a href="@Url.Action("Index","Loans")">Empréstimos</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                </div>
                <div class="box-body table-responsive no-padding">

                    <table style="width:100%">
                        <tr style="height: 48px;">
                            <td class="fc-header-right col-md-4 pull-left">
                                <a style="margin:4px; color:white;" href="@Url.Action("Create","Loans")" class="btn bg-olive margin"><i class="fa fa-plus-circle white"></i>&nbsp;Cadastrar</a>
                            </td>
                        </tr>
                    </table>
                    <table class="table table-striped table-bordered table-hover" id="tableGames">
                        <thead>
                            <tr>
                                <th class="text-center"> Id</th>
                                <th class="text-center"> Jogo </th>
                                <th class="text-center"> Amigo </th>
                                <th class="text-center"> Data de Empréstimo </th>
                                <th class="text-center"> Data de Devolução </th>
                                <th class="text-center"> Ações </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td> @item.Id </td>
                                    <td> @item.Game.Name </td>
                                    <td> @item.Friend.Fullname </td>
                                    <td> @item.LoanDate </td>
                                    <td> @item.DeliveredDate </td>
                                    <td class="text-center">
                                        @if (item.DeliveredDate == null)
                                        {
                                            <a onclick="Mensagem('Receber Jogo?', 'Tem certeza que deseja receber este jogo?', '@Url.Action("Receive", "Loans",  new {Id = item.Id})', 'Jogo recebido.')" title="Receber" class="btn btn-success btn-small"><i class="fa fa-check"></i></a>
                                        }
                                        <a onclick="Mensagem('Excluir Empréstimo?', 'Tem certeza que deseja excluir este empréstimo?', '@Url.Action("Delete", "Loans",  new {Id = item.Id})', 'Empréstimo excluído.')" title="Excluir" class="btn btn-danger btn-small"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
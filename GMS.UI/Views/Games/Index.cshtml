@model IEnumerable<GMS.UI.ViewModels.GameViewModel>

@{
    ViewBag.Title = "Lista de Jogos";
}

<section class="content-header">
    <h1>
        &nbsp;
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-th"></i> Dashboard</a></li>
        <li><a href="@Url.Action("Index","Games")">Jogos</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                </div>
                <div class="box-body table-responsive no-padding">

                    <table style="width:100%">
                        <tr style="height: 48px;">
                            <td class="fc-header-right col-md-4 pull-left">
                                <a style="margin:4px; color:white;" href="@Url.Action("Create","Games")" class="btn bg-olive margin"><i class="fa fa-plus-circle white"></i>&nbsp;Cadastrar</a>
                            </td>
                        </tr>
                    </table>
                    <table class="table table-striped table-bordered table-hover" id="tableGames">
                        <thead>
                            <tr>
                                <th class="text-center"> Id</th>
                                <th class="text-center"> Nome </th>
                                <th class="text-center"> Genero </th>
                                <th class="text-center"> Plataforma </th>
                                <th class="text-center"> Desenvolvedor </th>
                                <th class="text-center"> Ações </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td> @item.Id </td>
                                    <td> @item.Name </td>
                                    <td> @item.Genre </td>
                                    <td> @item.Platform </td>
                                    <td> @item.Developer </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Details", "Games",  new {Id = item.Id})" title="Detalhes" class="btn bg-blue btn-small"><i class="fa fa-search-plus"></i></a>
                                        <a href="@Url.Action("Edit", "Games",  new {Id = item.Id})" title="Editar" class="btn btn-warning btn-small"><i class="fa fa-edit"></i></a>
                                        <a onclick="Mensagem('Excluir Jogo?', 'Tem certeza que deseja excluir este jogo?', '@Url.Action("Delete", "Games",  new {Id = item.Id})', 'Jogo excluído.')" title="Excluir" class="btn btn-danger btn-small"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>